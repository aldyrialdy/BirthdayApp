<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/main_root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="xyz.fatahillah.birthdayapp.MainActivity">

    <ImageView
        android:id="@+id/turbine_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/engine"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/info_image_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/info"/>

        <ImageButton
            android:id="@+id/rotate_image_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/info_image_button"
            android:scaleType="centerCrop"
            android:src="@drawable/refresh"/>

        <TextView
            android:id="@+id/to_who_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="Happy Birthday, Ara"
            android:textSize="28sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/from_who_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/to_who_text_view"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:text="from your dearest friend, Hikmat"
            android:textSize="20sp"/>

    </RelativeLayout>

</LinearLayout>
